{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="block-small">
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialiser mon mot de passe</h1>
            <label for="inputEmail">E-mail</label>
            <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>


            <button class="btn btnPrimary btn-block mt-3" type="submit">
                Valider
            </button>
        </form>
        <hr>
        <p class="text-center">Ou souhaitez vous <a href="{{ path('app_login') }}">vous connecter</a>?</p>
    </div>
{% endblock %}

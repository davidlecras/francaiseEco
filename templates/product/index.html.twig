{% extends 'base.html.twig' %}

{% block title %}La boutique | La française écolo-mode{% endblock %}

{% block titre %}La boutique Écolo-mode{% endblock %}
{% block body %}
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-items text-center">
                    <img src="uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
                    <h5>{{ product.name}}</h5>
                    <span>{{ product.subtitle }}</span>
                    {{ product.prix |format_currency('EUR')|number_format(2, '.', ',')}}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}La boutique{% endblock %}

{% block titre %}La boutique Ã‰colo-mode{% endblock %}
{% block body %}
    <div class="row pt-5">
        <div class="col-md-3">
            <h4 class="text-center">Filtrer</h4>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h4>Nos produits</h4>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-items text-center pb-3">
                            <a href="{{ path('product_show',{'slug': product.slug}) }}">
                                <img src="uploads/{{ product.image }}" alt="{{ product.name }}" class="img-fluid">
                            </a>
                            <h5>{{ product.name}}</h5>
                            <span>{{ product.subtitle }}</span>
                            <br>
                            <span>{{(product.prix /100) | number_format(2, '.', ',') | format_currency('EUR')}}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

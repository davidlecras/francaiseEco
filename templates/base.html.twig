        {% block miette %}{% endblock %}
        {# messages flash après actions #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}  alert-dismissible fade show text-center" role="alert">
                    {{ message }}

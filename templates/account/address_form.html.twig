{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}
{% block titre %}J'ajoute une adresses{% endblock %}
{% block body %}

{{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">{{ form_row(form.name) }}</div>
        <div class="col-md-6">{{ form_row(form.firstname) }}</div>
        <div class="col-md-6">{{ form_row(form.lastname) }}</div>
        <div class="col-md-6">{{ form_row(form.compagny) }}</div>
        <hr class="my-3">
        <div class="col-md-9">{{ form_row(form.address) }}</div>
        <div class="col-md-3">{{ form_row(form.postcode) }}</div>
        <div class="col-md-6">{{ form_row(form.city) }}</div>
        <div class="col-md-6">{{ form_row(form.country) }}</div>
        <div class="col-md-12">{{ form_row(form.phone) }}</div>
        <hr class="my-3">
        <div class="col-6 text-center"><a href="{{ path('account_address') }}" class="btn btnSecondary btn-block"><i class="fas fa-arrow-left"></i> Revenir Ã  mes adresses</a></div>
        <div class="col-6 text-center">{{ form_row(form.submit) }}</div>
